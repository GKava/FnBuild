<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/select1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/roundmenu"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">
        <ImageView
            android:background="#FFFFFF"
            android:padding="3dp"
            android:id="@+id/img1"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/menu_const"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ALL\nCONSTRUCTION"
                android:textSize="30dp" />
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/select2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundmenu"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/select1"
        tools:layout_editor_absoluteX="0dp">
        <ImageView
            android:background="#FFFFFF"
            android:padding="3dp"
            android:id="@+id/img2"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_fort"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="FORT"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/select3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundmenu"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/select2"
        tools:layout_editor_absoluteX="0dp">
        <ImageView
            android:background="#FFFFFF"
            android:padding="3dp"
            android:id="@+id/img3"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_fort"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SANDBOX"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/roundmenu"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:id="@+id/select4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/select3"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:background="#FFFFFF"
            android:padding="3dp"
            android:id="@+id/img4"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_fort"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SPEED BUILD"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/roundmenu"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:id="@+id/select5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/select4"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:background="#FFFFFF"
            android:padding="3dp"
            android:id="@+id/img5"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/menu_trap"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TRAPS"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/roundmenu"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:id="@+id/select6"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/select5"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:background="#FFFFFF"
            android:padding="3dp"
            android:id="@+id/img6"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_fort"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="FIGHT"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/roundmenu"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:id="@+id/select7"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/select6"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:background="#FFFFFF"
            android:padding="3dp"
            android:id="@+id/img7"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_fort"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="3"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:background="@drawable/roundmenu"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:id="@+id/week8"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/select7"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="8"
            android:textSize="30dp"
            android:textColor="#000000"/>


    </LinearLayout>


    <LinearLayout
        android:background="@drawable/roundmenu"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:id="@+id/week9"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/week8"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="9"
            android:textSize="30dp"
            android:textColor="#000000"/>


    </LinearLayout>


    <LinearLayout
        android:background="@drawable/roundmenu"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:id="@+id/week10"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/week9"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10"
            android:textSize="30dp"
            android:textColor="#000000"/>



    </LinearLayout>


</android.support.constraint.ConstraintLayout>